<div class="postForm">
	<h1>New Post</h1>

	<div class="newPostForm">
		<div class="form">
			<%= form_for @post, url: {action: "create"} do |f| %>
			  <p>
			  <h2><%= f.label :title %></h2><br>
			  <%= f.text_field :title %>
			  </p>
			  <p>
			  <h2><%= f.label :content %></h2><br>
			  <%= f.text_area :content %>
			  </p>
			  <p>
			  <%= f.submit %>
			  </p>
			  <% if flash[:errors] %>
					<div class="notice"><%= flash[:errors] %></div>
				<% end %>
			<% end %>
	</div>

</div>
