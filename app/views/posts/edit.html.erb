<style>
  body {
    height: 100vh;
  }
</style>  
<div class="userForm">
  <h1>Edit Post</h1>
  <div class="userInfo">
    <h3><%= @post.title %></h3>

    <%= form_for @post, url: {action: "update"} do |f| %>
      <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
      </p>

      <p>
      <%= f.label :content %><br>
      <%= f.text_area :content %>
      </p>

      <p>
      <%= f.submit %>
      </p>
    <% end %>
  </div>
</div>
