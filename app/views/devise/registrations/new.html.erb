<style>
  body {
    height: 100vh;
  }
</style>

<div class="formPage">
  <h1>Sign up</h1>

  <div class="formContainer">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <%= devise_error_messages! %>

      <div class="fieldContainer">
        <h2><%= f.label :email %></h2>
        <%= f.email_field :email, autofocus: true, class: "field" %>
      </div>

      <div class="fieldContainer">
        <h2><%= f.label :password %></h2>
        <%= f.password_field :password, autocomplete: "off", class: "field" %>
      </div>

      <div class="fieldContainer">
        <h2><%= f.label :password_confirmation %></h2>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "field" %>
      </div>

      <div class="submitContainer">
        <%= f.submit "Sign up", class: "submit" %>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
  
</div>